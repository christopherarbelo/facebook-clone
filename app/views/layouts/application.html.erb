<!DOCTYPE html>
<html>
  <head>
    <title>Facebook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav id="navigation-bar">
      <h1 id="logo"><%= link_to 'Facebook', root_path %></h1>
      <% if user_signed_in? %>
      <ul>
        <li><%= link_to 'Friends', friends_path %></li>
        <li><%= link_to 'Users', users_path %></li>
        <li id="notifications-link">
          <p id="notification-text">
          Notifications
          <% if current_user.notifications.any? %>
            <span class="notification-badge"><%= current_user.notifications.count %></span>
          <% end %>
          </p>        
        </li>
        <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
      </ul>
      <section id="notification-panel">
        <% if current_user.notifications.any? %>
          <ul>
          <% current_user.notifications.each do |notification| %>
            <% case notification.kind %>
            <% when 0 %>
              <li><%= link_to notification.action_user.name, profiles_path(notification.action_user) %> sent you a friend request! | 
              <%= link_to 'Accept', accept_friend_request_path(notification.action_user), method: :post %> | 
              <%= link_to 'Decline', reject_friend_request_path(notification.action_user), method: :post %>
              </li>
            <% when 1 %>
              <li><%= link_to notification.action_user.name, profiles_path(notification.action_user) %> accepted your friend request! </li>
            <% end %>
            |<%= link_to 'Remove notification', notification_path(notification), method: :delete %>
          <% end %>
          </ul>
        <% else %>
          There are no notifications :(
        <% end %>
      </section>
      <% end %>
    </nav>
    <% flash.each do |name, message| %>
      <%= content_tag :section, message, class: "#{name} flash" %>
    <% end %>
    <%= yield %>
    <%= javascript_pack_tag 'custom-application' %>
  </body>
</html>
