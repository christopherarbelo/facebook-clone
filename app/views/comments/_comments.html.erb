<% post.comments.each do |comment| %>
<% if comment.valid? %>
  <section class="comment border border-1 p-3 m-3 rounded">
    <header class="comment-header d-flex justify-content-between">
      <section class="comment-name">
      <%= comment.user.name %>
      </section>
      <section class="comment-date">
      <%= comment.created_at.strftime('%m-%d-%Y %l:%M%P') %>
      </section>
    </header>
    <%= comment.message %>
    <section class="comment-likes">
      <%= render partial: 'likes/like', locals: { comment: comment }%>
    </section>
  </section>
<% end %>
<% end %>
