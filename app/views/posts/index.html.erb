<main id="feed" class="feed">
  <section id="profile-card" class="feed__profile d-flex col-lg-2 col-md-3 flex-column flex-shrink-0 p-3 text-white bg-dark">
    <%= render partial: 'profile-card' %>
  </section>
  
  <section id="posts" class="feed__main pt-4 col-lg-5 col-md-6 col-9 mx-auto">
    <%= render partial: 'post-form', locals: { post: @post } %>
    <section id="new-post" style="display: none;">
      <%= link_to 'View new posts', root_path %>
    </section>
    <section id="post-feed" class="my-4 feed__main__postings">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
      <%= render partial: 'post', locals: { post: post } %>
      <% end %>
    <% else %>
      <p>There are no posts :(</p>
    <% end %>
    </section>
  </section>
</main>
